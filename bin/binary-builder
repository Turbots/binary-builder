#!/usr/bin/env bash

curl -sSL https://get.rvm.io | bash -s stable
source ~/.rvm/scripts/rvm

rvm automount

echo "Ruby: `which ruby`"
echo "Gem: `which gem`"
echo "Bundle: `which bundle`"

export GEM_HOME=~/.gem

gem install bundler

ls -laR ~/.gem

bundle config mirror.https://rubygems.org ${RUBYGEM_MIRROR}
bundle install
bundle exec ./bin/binary-builder.rb "$@"
