#!/usr/bin/env bash

export GEM_HOME=~/.gem
export GEM_PATH=~/.gem

gem update --system --no-document -q --silent > /dev/null
gem install bundler --no-document -f -q --silent > /dev/null
bundle config mirror.https://rubygems.org ${RUBYGEM_MIRROR}
bundle install
bundle exec ./bin/binary-builder.rb "$@"
